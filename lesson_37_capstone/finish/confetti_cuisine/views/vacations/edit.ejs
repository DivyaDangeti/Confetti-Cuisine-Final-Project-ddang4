<div class="data-form">
    <form class="form-signin" id="editForm" action="<%=`/vacations/${vacation._id}/update?_method=PUT`%>" method="POST">
        <h2 class="form-signin-heading">Edit a Culinary vacation Package:</h2>
        <label for="inputTitle">Title</label>
        <input type="text" name="title" id="inputTitle" class="form-control" value="<%= vacation.title %>" placeholder="Title" autofocus>
        <label for="inputDescription">Description</label>
        <input type="text" name="description" id="inputDescription" class="form-control" value="<%= vacation.description %>" placeholder="Description of package" required>
        <label for="currentCuisine">Current Cuisine type</label>
        <input type="textbox" name="currentCuisine" id="currentCuisine" class="form-control" value="<%= vacation.cuisine %>" placeholder="currentCuisine" readonly>
        <label for="inputCuisine">New Cuisine type</label>
        <select name="cuisine" id="inputcusine" required class="form-control" value="<%= vacation.cuisine %>">
            <option value selected disabled>Please Choose an Option</option>
            <option value="Continental">Continental</option>
            <option value="Traditional">Traditional</option>
            <option value="Haute-cuisine">Haute-cuisine</option>
            <option value="Nouvelle-cuisine">Nouvelle-cuisine</option>
            <option value="Fusion">Fusion</option>
            <option value="Vegan">Vegan</option>
            <option value="Vegetarian">Vegetarian</option>
            <option value="Asian">Asian</option>
            <option value="Indian">Indian</option>
            <option value="Middle-Eastern">Middle-Eastern</option>
            <option value="African">African</option>
            <option value="Central American">Central American</option>
            <option value="South American">SouthAmerican</option>
        </select>

        <label for=" inputHeroImage ">Vacation 'hero image' filename</label>
        <input type="text" name="heroImage" id="inputHeroImage" class="form-control" placeholder="Filename for vacation package hero image, e.g., Thai.png" required value="<%= vacation.heroImage %>">
        <label for="inputMaxTravelers">Max Travelers</label>
        <input type="number" name="maxTravelers" id="inputMaxTravelers" class="form-control" placeholder="Maximum # of travelers" value="<%= vacation.maxTravelers %>" min="0" max="25" required>
        <label for="inputCost">Cost</label>
        <input type="text" name="cost" id="inputCost" pattern="\d*" class="form-control" value="<%= vacation.cost %>" placeholder="Cost" required>
        <label for="inputDestination">Destination</label>
        <input type="text" name="destination" id="inputDestination" class="form-control" placeholder="Vacation package destination: City, Country" required value="<%= vacation.destination %>">
        <label for="currentDepartureLocation">Current Departure Location</label>
        <input type="textbox" name="currentDepartureLocation" id="currentDepartureLocation" class="form-control" value="<%= vacation.departureLocation %>" readonly>

        <label for="inputDepartureLocation">New Departure Location</label>
        <select name="departureLocation" id="inputDepartureLocation" required class="form-control" required value="<%= vacation.departureLocation %>">
            <option value selected disabled>Please Choose an Option</option>
            <option value="New York (JFK)">New York</option>
            <option value="Boston (BOS)">Boston</option>
            <option value="Chicago (ORD)">Chicago</option>
            <option value="Miami (MIA)">Miami</option>
            <option value="St. Louis (STL)">St. Louis</option>
            <option value="Dallas (DFW)">Dallas</option>
            <option value="Seattle (SEA)">Seattle</option>
            <option value="San Francisco (SFO)">San Francisco</option>
        </select>
        <label for="inputDepartureDate">Departure Date</label>
        <input type="date" name="departureDate" id="inputDepartureDate" class="form-control" placeholder="Date Leaving" default="date.now" required value="<%= vacation.departureDate %>" onchange="test(this.value)" />
        <label for="inputReturnDate">Return Date</label>
        <input type="date" name="returnDate" id="inputReturnDate" class="form-control" placeholder="Date Returning" min="2021-12-01" default="date.now" required value="<%= vacation.returnDate %>" />

        <br/><button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
</div>

<script>
    function test(val) {
        document.getElementsByName("returnDate")[0].setAttribute('min', val);
    }
</script>